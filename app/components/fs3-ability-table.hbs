<div class="fs3-ability-table">
  <div class="char-ability-title">{{this.title}}</div>

    <table class="char-ability-list fs3-ability-list-{{this.abilityType}}">
    {{#each this.list as |ability| }}
    <tr>
      <td>{{ability.name}} 
        {{#if ability.linked_attr}}
        <span class="fs3-linked-attr">({{ability.linked_attr}})</span>
        {{/if}}
      </td>
      <td><Fs3Dots @rating={{ability.rating}} @max={{this.max}} @abilityType={{this.abilityType}} />

        <div class="fs3-specialties">
      {{#if this.showSpecs}}
          {{#if ability.specialties}}
            ({{ability.specialties}})
          {{/if}}
      {{/if}}
        </div>
    
      </td>
      <td>{{ability.rating_name}}</td>
    </tr>
    {{/each}}
  </table>

</div>
