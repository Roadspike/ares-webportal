<p><b>Experience Points Available:</b> {{this.char.fs3.xp.xp_points}}</p>

<Fs3Xplist @category="Attributes" @abilities={{this.char.fs3.xp.attributes}} @xp={{this.char.fs3.xp.xp_points}} @canLearn={{this.char.fs3.xp.can_learn}} @onLearnAbility={{this.learnAbility}} />



<Fs3Xplist @category="Action Skills" @abilities={{this.char.fs3.xp.action_skills}} @xp={{this.char.fs3.xp.xp_points}} @canLearn={{this.char.fs3.xp.can_learn}} @onLearnAbility={{this.learnAbility}} />



<Fs3Xplist @category="Background Skills" @abilities={{this.char.fs3.xp.backgrounds}} @xp={{this.char.fs3.xp.xp_points}} @canLearn={{this.char.fs3.xp.can_learn}} @onLearnAbility={{this.learnAbility}} />


<Fs3Xplist @category="Language Skills" @abilities={{this.char.fs3.xp.languages}} @xp={{this.char.fs3.xp.xp_points}} @canLearn={{this.char.fs3.xp.can_learn}} @onLearnAbility={{this.learnAbility}} />

{{#if this.char.fs3.use_advantages}}

  {{#if this.char.fs3.xp.allow_advantages_xp}}

    <Fs3Xplist @category="Advantages" @abilities={{this.char.fs3.xp.advantages}} @xp={{this.char.fs3.xp.xp_points}} @canLearn={{this.char.fs3.xp.can_learn}} @onLearnAbility={{this.learnAbility}} />
  {{else}}
  <p><b>Advantages</b></p>
    You can't raise advantages directly with XP.  Submit a request to staff.
  {{/if}}
{{/if}}
  

<hr/>
<div class="xp-ability">
  <div class="xp-ability-name">New Ability</div>

  {{#if (and (gt this.char.fs3.xp.xp_points 0) this.char.fs3.xp.can_learn)}}
    <div>
      <Input @type="text" size={{25}} @value={{this.newAbility}} />
    </div>

    <div class="xp-learning">
      <button class="btn btn-secondary btn-xp" {{on 'click' this.learnNewAbility}}>Learn</button>
    </div>
  {{else}}
    Out of XP
  {{/if}}
</div>

{{#if this.char.custom.dotcount}}
  <div class="dotcount">
    <hr/>
    <h2>Dotcount</h2>
    {{{this.char.custom.dotcount}}}
  </div>
{{/if}}
